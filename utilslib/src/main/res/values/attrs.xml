<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ratio" format="float" />
    <attr name="card_padding" format="dimension" />
    <attr name="card_margin" format="dimension" />
    <attr name="card_loop" format="boolean" />
    <attr name="card_max_offset" format="dimension" />
    <attr name="card_scale_rate" format="float" />
    <attr name="child_item_size" format="float" />
    <attr name="view_size" format="integer" />

    <declare-styleable name="ElasticCardView">
        <attr name="ratio" />
    </declare-styleable>

    <declare-styleable name="CardViewPager">
        <attr name="card_padding" />
        <attr name="card_margin" />
        <attr name="card_scale_rate" />
        <attr name="card_max_offset" />
        <attr name="card_loop" />
    </declare-styleable>

    <declare-styleable name="CircleShrinkMenuLayout">
        <attr name="child_item_size" />
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="view_size"/>
    </declare-styleable>


    <!--电池-->
    <declare-styleable name="Battery">
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="batteryColor" format="color"/>
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>


    <!--图片移动view-->
    <declare-styleable name="MovingImageView">
        <attr name="miv_speed" format="integer"/>
        <attr name="miv_repetitions" format="integer"/>
        <attr name="miv_max_relative_size" format="float"/>
        <attr name="miv_min_relative_offset" format="float"/>
        <attr name="miv_start_delay" format="integer"/>
        <attr name="miv_load_on_create" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MovingImageViewTheme">
        <attr name="movingImageViewStyle" format="reference"/>
    </declare-styleable>
</resources>